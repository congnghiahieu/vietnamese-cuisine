{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2017",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@firebase/auth": [
                "./node_modules/@firebase/auth/dist/index.rn.d.ts"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "auth/sign-up.js",
        "lib/dbpush.ts"
    ],
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "nodenext"
        }
    }
}
